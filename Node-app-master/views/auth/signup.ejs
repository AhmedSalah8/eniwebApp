<%-include('../includes/head.ejs')%>
    </head>
    <%-include('../includes/navigation.ejs')%>
                    <div style="margin-top:150px;"></div>
                    <section class=" p-5 w-75 m-auto signup-form " style=" border-radius: .5rem .5rem 0 0; ">
                        <div class="row">
                            <div class="col-12">
                                <div class="card text-black" style="border-radius: 25px;">
                                    <div class="card-body p-md-5">
                                        <div class="row justify-content-center">
                                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                                    
                                                <p class="text-center h1 fw-bold mb-5 mt-4">Sign Up</p>
                                                            <% if (errorMessage) { %>
                                                                <div class="mb-3" style="color:red;">
                                                                    <%= errorMessage %>
                                                                </div>
                                                                <% } %>
                                                <form action="/signup" method="post" novalidate>
                                                    
                                                    <div class="d-flex flex-row align-items-center mb-2">
                                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                        <div class="form-outline flex-fill mb-4">
                                                            <label class="form-label" for="email">Your Email</label>
                                                            <input type="email" name="email" id="email" value="<%=oldInputs.email%>"
                                                                class="<%=validationErrors.find(e=>e.param==='email') ? 'invalid' : '' %> form-control">
                                                        </div>
                                                    </div>
                    
                                                    <div class="d-flex flex-row align-items-center mb-2">
                                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                        <div class="form-outline flex-fill mb-4">
                                                            <label class="form-label" for="password">Password</label>
                                                            <input type="password" name="password" id="password" value="<%=oldInputs.password%>"
                                                                class="<%=validationErrors.find(e=>e.param==='password') ? 'invalid' : '' %> form-control">
                                                        </div>
                                                    </div>
                    
                                                    <div class="d-flex flex-row align-items-center mb-2">
                                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                        <div class="form-outline flex-fill mb-4">
                                                            <label class="form-label" for="confirmPassword">Confirm password</label>
                                                            <input type="password" name="confirmPassword" id="confirmPassword" value="<%=oldInputs.confirmPassword%>"
                                                                class="<%=validationErrors.find(e=>e.param==='confirmPassword') ? 'invalid' : '' %> form-control">
                                                        </div>
                                                    </div>
                                                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    
                                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                        <button type="submit" style="background-color:#fed300;border:none;" class="btn btn-primary btn-lg">Register</button>
                                                    </div>
                    
                                                </form>
                    
                                            </div>
                                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 justify-content-around">
                    
                                                <img src="/assets/Eni_SpA.svg.png" width ="381px"
                                                    class="img-fluid" alt="ENI image" >
                    
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
        <%-include('../includes/end.ejs') %>
                <script src="/js/non-home.js"></script>